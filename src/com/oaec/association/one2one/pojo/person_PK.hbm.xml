<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.oaec.association.one2one.pojo">

    <class name="Person" table="CT_PERSON_PK" >
        <id name="id" column="ID" type="long">
            <generator class="sequence">
				<param name="sequence">ct_person_pk_seq</param>
            </generator>
        </id>
        <!-- string是hibernate的内置对象，也可以用java.lang.String -->
        <property name="name" type="string" column="NAME"/>
        <property name="gender" type="string" column="GENDER"/>
        <property name="age" type="integer" column="AGE"/>
        
        <one-to-one name="passport" class="Passport" cascade="all"/>
    </class>

</hibernate-mapping>